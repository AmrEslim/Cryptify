{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-vcpkg",
            "displayName": "Windows (vcpkg)",
            "description": "Windows build using vcpkg toolchain",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                 "VCPKG_TARGET_TRIPLET": "x64-mingw-static" 
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-default",
            "displayName": "Linux (System)",
            "description": "Linux build using system libraries",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ]
}